<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

<android.support.v7.widget.CardView
    android:id="@+id/ly_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="10dp"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:padding="3dp"
   >
    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="match_parent" />

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
<TextView

    android:gravity="left"
    android:id="@+id/Notification_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DÃ©passement d'eau"
    android:layout_alignParentLeft="true"
    android:textSize="20dp"

    android:textColor="#060606"
    />
    <TextView
        android:gravity="right"
        android:id="@+id/Notification_recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Notification_label"
        android:textSize="12dp"
        android:layout_alignBaseline="@id/Notification_label"

        android:textColor="#ec0909"
        />
    <TextView
    android:id="@+id/regard_infos"
        android:gravity="left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tunis , Lafayette , Rue de Palestine"
    android:textSize="20dp"
        android:layout_below="@id/Notification_label"
        android:layout_centerHorizontal="true"
    android:textColor="#2b3a87"
    />
    <TextView
        android:id="@+id/regard_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/10/2016"
        android:textSize="20dp"
        android:layout_below="@id/regard_infos"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        />
</RelativeLayout>
